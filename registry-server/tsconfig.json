{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "incremental": true,
    "declaration": false,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "baseUrl": ".",
    "outDir": "public",
    "lib": ["es6", "es7", "es2017", "dom"]
  },
  "exclude": ["./#/**/*.test.ts", "./#/**/*.test.tsx"]
}
